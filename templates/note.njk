<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ site.name }}</title>
    <meta name="description" content="{{ site.description }}" />

    {% include "templates/partials/styles.njk" %}
    {% include "templates/partials/scripts.njk" %}
    <script>
      function highlight_note(index){
        $(`#${index}`).siblings().css({"border-color": "#C1E0FF", 
             "border-width":"2px", 
             "border-style":"dashed"});
      }



      $(document).ready(function(){
          $('a') .click(function(e) {
              if(this.href.indexOf("#") != -1)
                highlight_note(this.href.split("#")[1])  
          });

          $('#summary').find('a').css({"text-decoration":"underline overline", "cursor":"pointer"})

           
      });
      function init(){
      }
    </script>
  </head>
  <body onload="init()">
    
    <main>
      <div class="container">
        {% include "templates/partials/menu.njk" %}
        <div class="row">
          <div class="col s12 flow-text">
            {% include "templates/partials/banner.njk" %}
          </div>
        </div>
          <div class="row">
            <div class="col s12">
              <h4>Notes - Pages {{ pages }}</h4>
            </div>
          </div>
          {% for entry in notes %}
          <div class="row">
            <div class="entry flow-text">
                <a id="{{ loop.index }}"></a>
                <div class="col s3">{{ entry.cue }}</div>
                <div class="col s8">{{ entry.note }}</div>
                <div class="col s1 hide-on-med-and-down">{{ entry.page }}</div>
            </div>
          </div>
          {% endfor %}
        
        <div class="row">
          <div id="summary" class="col s12 flow-text">
            {{ contents | safe }}
          </div>
        </div>
    </div>
  </main>

    <footer>
      
    </footer>
  </body>
</html>