<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ site.name }}</title>
    <meta name="description" content="{{ site.description }}" />

    {% include "templates/partials/styles.njk" %}
    {% include "templates/partials/scripts.njk" %}
    <script>
      function init(){
      }
    </script>
  </head>
  <body onload="init()">
    
    <main>
      <div class="container">
        {% import "templates/partials/menu.njk" as menu %}
        {{ menu.getMenu(2) }}
       
        <div class="row">
          <div class="col s12 flow-text">
            {% include "templates/partials/banner.njk" %}
            <h2>{{ title }} <span style="font-size: 0.5em; font-style: italic;">by Jon Watson</span></h2>
            <div>{{ moment(date).format("MMM DD, YYYY") }}</div>
            <div class="col s12" style="border-bottom: solid #0e0e0e 2px"></div>
            {{ contents | safe }}
          </div>
        </div>
    </div>
  </main>

    <footer>
      
    </footer>
  </body>
</html>