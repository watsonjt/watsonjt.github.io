<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ site.name }}</title>
    <meta name="description" content="{{ site.description }}" />

    {% include "templates/partials/styles.njk" %}
    {% include "templates/partials/scripts.njk" %}
    <script>
      function init(){
      }
    </script>
  </head>
  <body onload="init()">
    
    <main>
      <div class="container">
        {% import "templates/partials/menu.njk" as menu %}
        {{ menu.getMenu(2) }}
        <div class="row">
          <div class="col s12 flow-text">
            {% include "templates/partials/banner.njk" %}
            <h5>Latest Articles</h5>
            <div class="divider"></div>
            {% set n = 5%}
            {% for article in articles %}
              {% if loop.index < n %}
              <div class="col s12 m6 l3">
                
                <div class="card">
                  <div class="card-image">
                    <img width="200" src="{{ setArticleImage(article.path) }}">
                    <span class="card-title">{{ article.title }}</span>
                    <a href="/{{ article.path | replace('.md','.html') }}" class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
                  </div>
                  <div class="card-content">
                    <p>{{ article.description }}</p>
                  </div>
                </div>
              </div>
              {% else %}
                
                {% if loop.index == n %}
                <div class="row">
                    <div class="col s11"><h5>Archived Articles</h5></div>
                </div>
                {% endif %}
                
               <div class="row">
                  <div class="col s11 offset-s1 flow-text">
                    <a style="cursor:pointer;" href="/{{ article.path | replace('.md','.html') }}">{{ article.title }}</div>
                  </div>
               </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
    </div>
  </main>

    <footer>
      
    </footer>
  </body>
</html>